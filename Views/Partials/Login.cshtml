@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@inject Umbraco.Cms.Web.Common.UmbracoHelper Umbraco
@inject Umbraco.Cms.Web.Common.UmbracoHelper Umbraco


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link href="~/assets/css/authentication.css" rel="stylesheet" asp-append-version="true"/>

    @{var homePage = Umbraco.ContentAtRoot().FirstOrDefault(x => x.ContentType.Alias == "home");}
@using (Html.BeginUmbracoForm<Mysamchi.Controllers.MemberController>("Login"))
{
    <div class="items-center justify-center bg-gray-100">
        <div class="row mt-5">
            <div class="col-sm-12 col-md-4"></div>
            <div class="col-sm-12 col-md-4 p-4">
                @{

                    var logo = homePage?.Value<IPublishedContent>("logo");
                }
           
                <div class="bg-white shadow-lg rounded-2xl p-8 w-full max-w-md p-4 custome-card justify-content-center flex-column " style="text-align:center; display:flex;align-items:center;justify-content:center">


                    <img src="@logo.Url()" alt="" style="height:50px" class="m-4">
                    <!-- Heading -->
                    <h4 class="text-2xl font-bold text-center text-gray-800 mb-6 m-3">Samchi Technologies</h4>

                    <!-- Username -->
                    <div class="mb-4 ">
                        <label for="Username" class="block text-sm font-medium text-gray-700 mb-1">Username:</label>
                        <input type="text" name="Username" id="Username" required
                               class="w-full px-4 py-2 border rounded-xl focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400 outline-none" />
                    </div>

                    <!-- Password -->
                    <div class="mb-6">
                        <label for="Password" class="block text-sm font-medium text-gray-700 mb-1">Password:</label>
                        <input type="password" name="Password" id="Password" required
                               class="w-full px-4 py-2 border rounded-xl focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400 outline-none" />
                    </div>

                    <!-- Hidden Redirect -->
                    <input type="hidden" name="RedirectUrl" value="/admin-portal" />

                    <!-- Submit Button -->
                    <button type="submit" class="w-full bg-indigo-500 text-white font-semibold  rounded-xl hover:bg-indigo-600 transition duration-200 custome-login">
                        Login
                    </button>

                    <!-- Error Message -->
                    @if (TempData["LoginError"] != null)
                    {
                        <p class="mt-4 text-red-600 text-center font-medium text-danger">@TempData["LoginError"]</p>
                    }

                    <!-- Extras -->
                 
                </div>
            </div>
            <div class="col-sm-12 col-md-4"></div>
        </div>
      
    </div>
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
