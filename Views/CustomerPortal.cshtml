
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@inject Umbraco.Cms.Web.Common.UmbracoHelper Umbraco
@using Umbraco.Cms.Core.Models.Membership
@inject Umbraco.Cms.Core.Security.IMemberManager MemberManager
@{
    var allleads = Umbraco.ContentAtRoot().FirstOrDefault(x => x.ContentType.Alias == "leadsManagementSection");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<link href="~/assets/country-picker-flags/build/css/countryselect.min.css" rel="stylesheet" />
<link href="~/assets/country-picker-flags/build/css/demo.css" rel="stylesheet" />

</head>
<body>
    @{
        var currentMember = await MemberManager.GetCurrentMemberAsync();

        var currentEmail = currentMember?.Email;

    }

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Dashboard</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link active" href="#">Leads Created</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Loyalty Points</a></li>
                    <li class="nav-item">
                        @using (Html.BeginUmbracoForm<Mysamchi.Controllers.MemberController>("Logout"))
                        {
                            <input type="hidden" name="redirectUrl" value="/" />
                            <button type="submit" class="nav-link">
                                Logout
                            </button>
                        }


                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Dashboard Content -->
    <div class="container-fluid my-5">
        <h2>Welcome backoffice user: @User.Identity?.Name</h2>
        <h2 class="mb-4">Activities Overview</h2>




        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Total Leads Created</h5>
                        <p class="card-text fs-4">@allleads.Children.Count()</p>
                    </div>
                </div>
            </div>    <div class="col-md-3">
                <div class="card text-white bg-success mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Open Leads</h5>
                        <p class="card-text fs-4">@allleads.Children.Where(c =>!c.Value<bool>("status")).Count()</p>
                    </div>
                </div>
            </div><div class="col-md-3">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Closed Leads</h5>
                        <p class="card-text fs-4">@allleads.Children.Where(c =>c.Value<bool>("status")).Count()</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Total Loyalty Points Erned</h5>
                        <p class="card-text fs-5">@allleads.Children.Sum(i =>i.Value<Double>("loyaltyPoints"))</p>
                    </div>
                </div>
            </div>
        </div>
        <h2>       Public Wall</h2>
        <!-- Tabs Navigation -->
        <ul class="nav nav-tabs" id="myTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#openleads" type="button" role="tab">Open Leads</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#claimedleads" type="button" role="tab">My Claimed leads</button>
            </li>   <li class="nav-item" role="presentation">
                <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#closedleads" type="button" role="tab">Closed leads</button>
            </li> <li class="nav-item" role="presentation">
                <button class="nav-link" id="loyalty-tab" data-bs-toggle="tab" data-bs-target="#loyaltypoints" type="button" role="tab">Loyalty Points</button>
            </li>

        </ul>

        <!-- Tabs Content -->
        <div class="tab-content mt-3" id="">
            <div class="tab-pane fade show active" id="openleads" role="tabpanel">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="submissionsTable">
                        <thead class="table-dark">
                            <tr>
                                <th>Order ID</th>
                                <th>Item ID</th>
                                <th>Item Name</th>
                                <th>Price</th>
                                <th>Loyalty Points</th>
                                <th>Date & Time Created</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var x in allleads.Children.Where(i => !i.Value<bool>("status")))
                            {
                                <tr>
                                    <td><span class="badge p-2 bg-success">@x.Value("orderId")</span></td>
                                    <td>@x.Value("itemId")</td>

                                    <td>@x.Value("itemName")</td>
                                    <td>Ksh. @x.Value("price")</td>
                                    <td>
                                        @x.Value("loyaltyPoints")</td>
                                    <td>@x.CreateDate</td>
                                    <td><p><span class="badge bg-success">Open</span></p></td>
                                    <td><p> <button onclick="claimLead(@x.Id)" class="btn btn-success m-2">Claim Lead</button></p></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div> 


            <div class="tab-pane fade show " id="claimedleads" role="tabpanel">
                <div class="table-responsive">


                    <table class="table table-bordered table-hover" id="submissionsTable">
                        <thead class="table-dark">
                            <tr>
                                <th>Order ID</th>
                                <th>Item ID</th>
                                <th>Item Name</th>
                                <th>Price</th>
                                <th>Loyalty Points</th>
                                <th>Date & Time Created</th>
                                <th>Status</th>

                                <th>Claimed by</th>


                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{


                                if (currentMember != null)
                                {

                                    var roles = await MemberManager.GetRolesAsync(currentMember);

                                    if (roles.Contains("Administrators"))
                                    {

                                        @foreach (var x in allleads.Children.Where(i => i.Value<bool>("status") == true && i.Value<string>("claimedBy") == currentEmail))
                                        {
                                            <tr>
                                                <td><span class="badge p-2 bg-success">@x.Value("orderId")</span></td>
                                                <td>@x.Value("itemId")</td>

                                                <td>@x.Value("itemName")</td>
                                                <td>Ksh. @x.Value("price")</td>
                                                <td>
                                                    @x.Value("loyaltyPoints")</td>
                                                <td>@x.CreateDate</td>
                                                <td><p><span class="badge bg-success">In progress ...</span></p></td>
                                                <td><p> @x.Value("claimedBy")</td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <button type="button" class="btn btn-danger">Revoke claim</button>
                                                        <button type="button" class="btn btn-success"  onclick="closeLead(@x.Value("orderId"),@x.Id)">Close lead</button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }

                                    }
                                    else if (roles.Contains("Workers"))
                                    {



                                        @foreach (var x in allleads.Children
                                           .Where(i => i.Value<bool>("status") && i.Value<string>("claimedBy") == currentEmail))
                                        {
                                            <tr>
                                                <td><span class="badge p-2 bg-success">@x.Value("orderId")</span></td>
                                                <td>@x.Value("itemId")</td>
                                                <td>@x.Value("itemName")</td>
                                                <td>Ksh. @x.Value("price")</td>
                                                <td>@x.Value("loyaltyPoints")</td>
                                                <td>@x.CreateDate</td>
                                                <td><span class="badge bg-success">In progress ...</span></td>
                                                <td>@x.Value("claimedBy")</td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <button type="button" onclick="revokeClaim(@x.Id)" class="btn btn-danger">Revoke claim</button>
                                                        <button type="button" onclick="closeLead(@x.Value("orderId"),@x.Id)" class="btn btn-success">Close lead</button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {

                                    }

                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="tab-pane fade" id="closedleads" role="tabpanel">
                <table class="table table-bordered table-hover" id="submissionsTable">
                    <thead class="table-dark">
                        <tr>
                            <th>Order ID</th>
                            <th>Item ID</th>
                            <th>Item Name</th>
                            <th>Claimed By</th>
                            <th>Price</th>
                            <th>Loyalty Points</th>
                            <th>Date & Time Created</th>
                            <th>Date & Time Closed</th>
                            <th>Status</th>
                            <th>Closure Status</th>
                            <th>Comments</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var x in allleads.Children.Where(i => i.Value<bool>("closed") && i.Value<string>("claimedBy") == currentEmail))
                        {
                            <tr>
                                <td><span class="badge p-2 bg-success">@x.Value("orderId")</span></td>
                                <td>@x.Value("itemId")</td>

                                <td>@x.Value("itemName")</td>
                                <td>@x.Value("claimedBy")</td>
                                <td>Ksh. @x.Value("price")</td>
                                <td>@x.Value("loyaltyPoints")</td>
                                <td>@x.CreateDate</td>
                                <td>@x.Value("closedOn")</td>
                                <td>@x.Value("status")</td>
                                <td>@x.Value("closureStatus")</td>
                                <td>@x.Value("remarks")</td>
                                <td>

                                    @if(@x.Value<string>("closureStatus") =="Successful"){
                                        <p> <button onclick="openRemarks(@x.Value("orderId"),'@x.Value("remarks")')" class="btn btn-success m-2">View Remarks</button></p>
                                    }
                                    else
                                    {
                                        <p> <button onclick="openRemarks(@x.Value("orderId"),'@x.Value("remarks")')" class="btn btn-warning m-2">View Remarks</button></p>
                                        
                                    }

                                    
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
            </div>
            <div class="tab-pane fade" id="loyaltypoints" role="tabpanel">
            <button onclick="openLoyaltyAccountForm('@currentEmail')" class="btn btn-sm btn-success m-4">Create new account</button>
                <table class="table table-bordered table-hover" id="loyaltypointsTable">
                    <thead class="table-dark">
                        <tr>
                            <th>Order ID</th>
                            <th>Phone Number</th>
                            <th>Loyalty Points</th>
                            <th>Number of Orders</th>
                            <th>Last Order Date</th>
                            <th>Add/Remove points</th>

                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>86868687</td>
                            <td>+254 712035642</td>

                            <td>14328</td>
                            <td>6</td>
                            <td>4/10/2025</td>
                          
                            <td>

                                <div class="container my-4">
                                    <div class="row align-items-center">
                                        <!-- Centered Add + Input -->
                                        <div class="col-md-8 d-flex justify-content-center">
                                            <div class="input-group">
                                                <button class="btn btn-success" type="button">Add</button>
                                                <input type="text" class="form-control" placeholder="Enter value">
                                                <button class="btn btn-success" type="button">Deduct</button>

                                            </div>
                                        </div>

                                        <!-- Right-aligned Reduce -->
                                       @*  <div class="col-md-4 d-flex justify-content-end">
                                            <button class="btn btn-danger" type="button">Reduce</button>
                                        </div> *@
                                    </div>
                                </div>
                            </td>
                            <td><p> <button class="btn btn-danger m-2">Delete</button></p></td>
                        </tr>
                      

                    </tbody>
                </table>
            </div>
        </div>

        <!-- Data Table -->
    
    </div>
    <!-- Button trigger modal -->


<!-- Modal -->
<!-- Large Close Lead Modal -->
<div class="modal fade" id="closeLeadModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="closeLeadModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content border-0 shadow-lg rounded-3">
      
      <!-- Header -->
      <div class="modal-header bg-success text-white">
        <h5 class="modal-title" id="closeLeadModalLabel">
          <i class="bi bi-check-circle-fill me-2"></i> Close Lead
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <!-- ✅ Alert area -->
      <div id="closeLeadAlert" class="alert d-none mx-3 mt-3" role="alert"></div>
  
      <!-- Form -->
     <form id="closeLeadForm" onsubmit="submitCloseLead(event)">
  <div class="modal-body">
    <div class="row g-3">
      <!-- 📱 Phone Number Field (Always Visible) -->
      <div class="col-md-6">
        <label for="phoneNumber" class="form-label">Phone Number</label>
        <input type="tel" value="+254" class="form-control" id="phoneNumber" required>
        <small id="phoneFeedback" class="d-block mt-1"></small>
      </div>

      <!-- ✅ Other Fields (Hidden Initially) -->
      <div id="otherFields" class="row g-3 d-none mt-2">
        <div class="col-md-6">
          <label for="closedBy" class="form-label">Closed By</label>
          <input type="text" class="form-control" id="closedBy" value="@currentMember?.Email" disabled required>
        </div>

        <div class="col-md-6">
          <label for="closeTime" class="form-label">Close Time</label>
          <input type="datetime-local" class="form-control" id="closeTime" required>
        </div>

        <div class="col-md-6">
          <label for="closeType" class="form-label">Close Type</label>
          <select class="form-select" id="closeType" required>
            <option value="">Select Type</option>
            <option value="Successful">Successful</option>
            <option value="Unsuccessful">Unsuccessful</option>
            <option value="Pending Follow-up">Pending Follow-up</option>
          </select>
        </div>

        <div class="col-12">
          <label for="remarks" class="form-label">Remarks</label>
          <textarea class="form-control" id="remarks" rows="3" placeholder="Add your remarks..." required></textarea>
        </div>

        <!-- Hidden Lead ID -->
        <input type="hidden" id="itemId" />
      </div>

      <!-- ➕ Create Account Button (Shown if no record found) -->
      <div id="createAccountWrapper" class="d-none mt-2">
        <button type="button" class="btn btn-sm btn-success" onclick="createAccount()">
          <i class="bi bi-person-plus-fill me-1"></i> Create Account
        </button>
      </div>
    </div>
  </div>

  <!-- ✅ Footer (Hidden Initially) -->
  <div id="formFooter" class="modal-footer d-none">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    <button type="submit" class="btn btn-success">
      <i class="bi bi-send-check me-1"></i> Submit & Close Lead
    </button>
  </div>
</form>

    </div>
  </div>
</div>

<div class="modal fade" id="remarksModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="closeLeadModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content border-0 shadow-lg rounded-3">

      <!-- Header -->
      <div class="modal-header bg-success text-white">
        <h5 class="modal-title" id="closeLeadModalLabel">
          <i class="bi bi-check-circle-fill me-2"></i><span id="remarksId">Remarks | </span>
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
         <!-- Modal Header -->
    

      <!-- ✅ Modal Body -->
      <div class="modal-body">
       <p id="remarks-id"></p>
      </div>

      <!-- Modal Footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
      <!-- ✅ Alert area -->
      <div id="closeLeadAlert" class="alert d-none mx-3 mt-3" role="alert"></div>

      <!-- Form -->
  
    </div>
  </div>
</div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/assets/js/countrySelect.min.js" asp-append-version="true"></script>
    <script src="/assets/js/new_leads.js"></script>
    <script>
$("#country_selector").countrySelect({
				// defaultCountry: "jp",
				// onlyCountries: ['us', 'gb', 'ch', 'ca', 'do'],
				// responsiveDropdown: true,
				preferredCountries: ['ca', 'gb', 'us']
			});

        $(document).ready(function() {
          $('#submissionsTable').DataTable({
            dom: 'Bfrtip',
            buttons: ['copy', 'csv', 'excel', 'pdf', 'print']
          });  $('#closedtables').DataTable({
            dom: 'Bfrtip',
            buttons: ['copy', 'csv', 'excel', 'pdf', 'print']
          });$('#loyaltypointsTable').DataTable({
            dom: 'Bfrtip',
            buttons: ['copy', 'csv', 'excel', 'pdf', 'print']
          });
        });
    </script>

</body>
</html>
